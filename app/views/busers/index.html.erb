<p id="notice"><%= notice %></p>

<h1>Busers</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Passwort</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @busers.each do |buser| %>
      <tr>
        <td><%= buser.firstname %></td>
        <td><%= buser.lastname %></td>
        <td><%= buser.passwort %></td>
        <td><%= buser.status %></td>
        <td><%= link_to 'Show', buser %></td>
        <td><%= link_to 'Edit', edit_buser_path(buser) %></td>
        <td><%= link_to 'Destroy', buser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

