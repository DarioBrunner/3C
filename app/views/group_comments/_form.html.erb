<%= form_with(model: [group_message, group_comment], local: true) do |form| %>
  <% if group_comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(group_comment.errors.count, "error") %> prohibited this group_comment from being saved:</h2>

      <ul>
        <% group_comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <h4>Group: <%= group_message.group.title%></h4>
  <pre><%= group_message.content %><br><small>Writer: <%= group_message.creator.name %></small> </pre>

  <% group_message.group_comments.each do |comment|%>
   <pre><%= comment.comment%>
     <br><small>Writer: <%= comment.user.name %></pre>
  <%end%>



  <div class="field  form-group">
    <%= form.text_area :comment, class: 'form-control', placeholder: 'Message', size: "30x5" %>
  </div>

  <div class="actions  form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

