<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :companyname %>
    <%= form.text_field :companyname, class: 'form-control' , placeholder: 'Companyname'%>
  </div>

  <div class="field form-group">
    <%= form.label :adress %>
    <%= form.text_field :adress, class: 'form-control' , placeholder: 'Adress' %>
  </div>

  <div class="field form-group">
    <%= form.label :passwort %>
    <%= form.text_field :passwort, class: 'form-control' , placeholder: 'Password' %>
  </div>

  <div class="field form-group">
    <%= form.label "Available Channels" %>
    <%= form.text_field :channelnumber, class: 'form-control' , placeholder: 'Number of Channels' %>
  </div>
  <table>
    <tr>
      <th>User</th>
      <th>Admin</th>
    </tr>
      <div class="field form-group">
      <% User.all.each do |admin| %>
          <tr>
          <td><%= admin.name %></td>
          <td><%= check_box_tag "company[user_ids][]", admin.id, @company.user_ids.include?(admin.id) %></td>
          <br />
        </tr>
        <% end %>
      </div>
    </tr>
  </table>
  <div class="actions form-group">
    <%= form.submit 'Add Company', class: 'btn btn-primary'%>
  </div>
<% end %>
