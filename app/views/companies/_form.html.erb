      <ul>
        <% company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :icon %>  <%= form.submit 'Save Company', class: 'btn btn-success pull-right' %>
    <% if company.icon.attached? %>
      <p><%= image_tag @company.icon.variant(resize: "175x175") %></p>
    <% end %>
    <%= form.file_field :icon, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :companyname %>
    <%= form.text_field :companyname, class: 'form-control', placeholder: 'Companyname' %>
  </div>

  <div class="field form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: 'form-control', placeholder: 'address' %>
  </div>


  <div class="field form-group">
    <%= form.label "Available Channels" %>
    <%= form.text_field :channel_number, class: 'form-control', placeholder: 'Number of Channels' %>
  </div>
  <table>
    </tr>
  </table>
  <div class="actions form-group">
    <% if current_user.superuser? %>
      <%= form.submit 'Save Company', class: 'btn btn-success' %>
    <% end %>
  </div>
<% end %>
