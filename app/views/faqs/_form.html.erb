<%= form_with(model: faq, local: true) do |form| %>
  <div class="container">

    <% if faq.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(faq.errors.count, "error") %> prohibited this faq from being saved:</h2>

        <ul>
          <% faq.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :question %><br>
      <%= form.text_area :question, size: "45x3"%>
    </div>

    <div class="field">
      <%= form.label :answer %><br>
      <%= form.text_area :answer, size: "45x7" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
</div>
