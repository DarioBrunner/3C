<p id="notice"><%= notice %></p>
<div class="jumbotron jumbo-main-content">
  <h1>Users</h1>
  <br>
  <table class="table">
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.avatar.attached? %>
            <p><%= image_tag user.avatar.variant(resize: "45x45"), class: "img-circle" %></p>
          <% end %></td>
        <td>
          <%= link_to user, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger pull-right',
                      'data-toggle' => 'tooltip', 'data-placement' => 'top', 'Title' => 'delete' do %>
            <i class="glyphicon glyphicon-remove"></i>
          <% end %><%= link_to edit_user_path(user), class: 'btn btn-default pull-right',
                               'data-toggle' => 'tooltip', 'data-placement' => 'top', 'Title' => 'edit' do %>
            <i class="glyphicon glyphicon-pencil"></i>
          <% end %>
          <%= link_to user, class: 'btn btn-default pull-right',
                      'data-toggle' => 'tooltip', 'data-placement' => 'top', 'Title' => 'show' do %>
            <i class="glyphicon glyphicon-search"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
</div>