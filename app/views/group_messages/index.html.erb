<p id="notice"><%= notice %></p>
<div class="jumbotron jumbo-main-content">

  <h1>Group Messages</h1>

  <table class="table"><%= link_to 'New Group Message', new_group_message_path, class: 'btn btn-primary pull-right' %>
    <thead>
    <tr>
      <th>Group</th>
      <th>Message</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @group_messages.each do |group_message| %>
      <tr>
        <td><%= group_message.group.title %></td>
        <td>
          <pre><%= group_message.context %></pre>
        </td>
        <td><%= group_message.creator.name %></td>
        <td><%= link_to 'Show', group_message, class: 'btn btn-default' %></td>
        <% if current_user.id == group_message.creator_id %>
          <td><%= link_to 'Edit', edit_group_message_path(group_message), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', group_message, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-default' %></td>
        <%else%>
        <td></td><td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
</div>