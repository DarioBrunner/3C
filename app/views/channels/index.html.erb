<p id="notice"><%= notice %></p>
<div class="jumbotron jumbo-main-content">
  <h1>Channels</h1>
  <% if current_user.admin? %>
    <%= link_to new_channel_path, class: 'btn btn-primary pull-right' do %>
      <i class="glyphicon glyphicon-plus"></i>Add Channel
    <% end %>


  <% end %>
  <br>
  <table class="table">
    <thead>
    <tr>
      <th>type</th>
      <th>Title</th>
      <th>Status</th>
      <% if current_user.admin? %>
        <th>Icon</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.usage.humanize %></td>
        <td><%= channel.title %></td>
        <td><%= channel.status %></td>
        <td>
          <% if channel.icon.attached? %>
            <p><%= image_tag channel.icon.variant(resize: "50x50"), class: "img-circle" %></p>
          <% end %></td>
        <% if current_user.admin? %>
          <td>
            <%= link_to channel, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger pull-right' do %>
              <i class="glyphicon glyphicon-remove"></i>
              <% end %>
              <%= link_to edit_channel_path(channel), class: 'btn btn-default pull-right' do %>
                <i class="glyphicon glyphicon-pencil"></i>
              <% end %>
            <%= link_to channel, class: 'btn btn-default pull-right' do %>
              <i class="glyphicon glyphicon-search"></i>
            <% end %>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>
</div>