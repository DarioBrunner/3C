<p id="notice"><%= notice %></p>

<h1>Channels</h1>

<table>
  <thead>
    <tr>
      <th>Typ</th>
      <th>Title</th>
      <th>Status</th>
      <%if current_user.admin?%>
       <th>Url</th>
       <th>Login</th>
      <%end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.typ.humanize %></td>
        <td><%= channel.title %></td>
        <td><%= channel.status %></td>
        <%if current_user.admin?%>
        <td><%= channel.url %></td>
        <td><%= channel.login %></td>
        <td><%= link_to 'Show', channel %></td>
        <td><%= link_to 'Edit', edit_channel_path(channel) %></td>
        <td><%= link_to 'Destroy', channel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.admin?%>
<%= link_to 'New Channel', new_channel_path %>
<%end%>
