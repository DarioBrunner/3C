<!DOCTYPE html>
<html>
<head>
  <title>RubyTestApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body>

<% if !current_user.nil? %>
  <nav class="navbar navbar-inverse">
    <div class="container">
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <!--This is for Showing User Data and Obtions-->

          <li class="active">
            <a href="#">
              Current User:
              <p><%= current_user.name.humanize %> || <%= current_user.company.companyname %></p>
              <% if current_user.admin? %>
                <p>Role: Admin</p>
              <% end %>
              <% if current_user.superuser? %>
                <p>Role: Superuser</p>
              <% end %>
              <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            </a>
          </li>
          <li><%= link_to('Company', companies_path) %></li>
          <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
          <li><a href="#">Projects</a></li>
          <li><a href="#">Contact</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>








  <div class="container">
    <% if user_signed_in? %>
      <%= link_to('Logout', destroy_user_session_path, :method => :delete, class: "button") %>
      <% if current_user.admin? || current_user.superuser? %>
        <%= link_to('Company', companies_path, class: "button") %>
      <% end %>
      <%= link_to('Group', groups_path, class: "button") %>
      <% if current_user.superuser? %>
        <%= link_to('User', users_path, class: "button") %>
        <%= link_to('Copyrigth', copyrigths_path, class: "button") %>
      <% else %>
        <%= link_to('User', edit_user_registration_path, class: "button") %>
      <% end %>
      <%= link_to('Channel', channels_path, class: "button") %>
      <% if current_user.admin? %>
        <%= link_to('Admin', admins_path, class: "button") %>
      <% end %>
      <%= link_to('Faq', faqs_path, class: "button") %>
    <% end %>
    <p><%= link_to('Chat', chats_path, class: "btn btn-default") %>
      <% @channels.each do |channel| %>
        <% if channel.both? || channel.chat? %>
          <%= channel.title %>
        <% end %>
      <% end %>
    </p>
    <p> <%= link_to('Blog', blogs_path, class: "btn btn-default") %>
      <% @channels.each do |channel| %>
        <% if channel.both? || channel.blog? %>
          <%= channel.title %>
        <% end %>
      <% end %>
    </p>
  </div>
<% end %>
<%= yield %>


<!--Footerclass-->
<footer class="container-fluid text-center">
  <%= link_to('Dataprotection', dataprotections_path, class: "button") %>   ||
  <%= link_to('Impressum', impressums_path, class: "button") %>

  <p>Â©
    <% @copyrigths.each do |content| %>
      <%= content.copy %>
    <% end %></p>
  </p>
</footer>

</body>

</html>
